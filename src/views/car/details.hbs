<section id="details-page">
  <div class="main_card">
    <div class="card_left">
      <div class="card-details">

        <h1>Model: {{car.model}}</h1>
        <h3>Posted by: Alex Smith</h3>

        <div class="card-specs">
          <p class="card-manufacturer">Manufacturer: {{car.manufacturer}}</p>
          <p class="card-engine">Engine Type: {{car.engine}}</p>
          <p class="card-top-speed">Top Speed: {{car.topSpeed}} kmph</p>
        </div>

        <p class="disc">
          Description:
          {{car.description}}
        </p>

        <!-- If there is no registered user, do not display buttons-->
        {{#if user}}
          <div class="social-btn">
            <!-- Only for registered user and author of the post -->
            {{#if isOwner}}
            <a href="/cars/{{car.id}}/edit" class="edit-btn">Edit</a>
            <a href="/cars/{{car.id}}/delete" class="del-btn">Delete</a>
            <!-- logged in users, who have not yet liked-->
            {{else}}
            {{#if liked}}
            <p class="you-liked">Thanks For The Like</p>
            {{else}}
            <a href="/cars/{{car.id}}/like" class="like-btn">Like</a>

          {{/if}}
            <!-- logged in user who has already liked-->
          </div>
            {{/if}}
        {{/if}}
      </div>
    </div>
    <div class="card_right">
      <img src="{{car.image}}" alt="{{car.model}}" />
    </div>
  </div>
</section>

<section id="likes">
  <div class="like-info">
    <div class="card_left">
      <div class="card-details">
        <h1>Likes</h1>
        <div class="card-like">
          <!-- Show the rating of likes, if there are no likes yet, the number must be 0. -->
          <p class="PV">Total likes: {{totalLikes}} </p>
        </div>
        <p class="disc">{{#if hasLikes}} People who liked the post - {{likedUsers}}  {{else}} No one has liked yet. {{/if}} </p>
        <!-- If there are already people who have cast their like for the post, separate their emails with a comma and a space ", " -->
        <!-- <p class="disc">People who liked the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>-->
      </div>
    </div>
  </div>
</section>